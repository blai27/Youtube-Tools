{
  "name": "Youtube Browser Tools",
  "version": "1.0",
  "description": "A Google Chrome Extension that automates some actions when browsing/watching Youtube videos",
  "permissions": [
    "activeTab"
  ],
  "options_page": "src/options.html",
  "browser_action": {
      "default_title": "Youtube Tools"
  },
  "manifest_version": 2,
  "background" : {
    "scripts" : ["src/myscript2.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/user/*/videos"],
      "js": ["src/jquery-1.11.1.js", "src/myscript.js"],
      "run_at": "document_end"
    }
  ]
}